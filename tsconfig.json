{
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "removeComments": true,
    "outDir": "lib",
    "lib": [
      "es6",
      "es2017",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "types": [
      "node",
      "aws-sdk"
    ]
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/*.js"],
  "compileOnSave": false
}
